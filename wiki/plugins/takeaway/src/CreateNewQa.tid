<div>
<$reveal type="nomatch" state="$:/temp/addq!!question" text="">
<$reveal type="nomatch" state="$:/temp/addq!!answer" text="">

<$tiddler tiddler="$:/temp/addq">
	<$set name="previewTakeawayType" value="rememberq">
		{{||$:/plugins/sobjornstad/TakeAway/TakeawayBackSide}}
	</$set>
</$tiddler>

<$set name=rightNow value=<<now "[UTC]YYYY0MM0DD0hh0mm0ss0XXX">> >
<$button>
	<$action-createtiddler
		$basetitle=<<getName>>
		$savetitle="$:/temp/addq!!newtid"
		tags="Takeaway"
		question={{$:/temp/addq!!question}}
		answer={{$:/temp/addq!!answer}}
		qtype="rememberq"
		origin=<<currentTiddler>>
	/>
	<$action-deletetiddler $tiddler="$:/temp/addq"/>
		
Add takeaway</$button>
</$set>
</$reveal>
</$reveal>
</div>