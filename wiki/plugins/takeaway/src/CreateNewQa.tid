\define getName() Tr:$(rightNow)$

<table>
<tr>
	<th style="text-align: left;">Question</th><td class="gtw-question-input"><$edit-text tiddler="$:/temp/addq" tag=input default="" field="question" placeholder="e.g., What field contains the name of a tiddler?"/></td>
</tr>
<tr>
	<th style="text-align: left;">Answer</th><td class="gtw-question-input"><$edit-text class="gtw-question-input" tiddler="$:/temp/addq" tag=input default="" field="answer" placeholder="e.g., `title`"/></td>
